<Window x:Class="CollatzConjecture.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollatzConjecture.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox x:Name="GrpMain">
            <Grid>
                <ComboBox x:Name="CmbActions" HorizontalAlignment="Left" Margin="40,114,0,279" Width="164"/>
                <Button x:Name="BtnGo" Content="Button" HorizontalAlignment="Left" Margin="40,71,0,0" VerticalAlignment="Top" Height="38" Width="164"/>
                <ProgressBar x:Name="PrbCalculationProgress" HorizontalAlignment="Center" Height="40" Margin="0,314,0,0" VerticalAlignment="Top" Width="200"/>
                
            </Grid>

        </GroupBox>
        <GroupBox x:Name="GrpWiki" IsEnabled="False" Visibility="Collapsed">
            <Grid>
                <TextBlock x:Name="TxtWikiInfo"></TextBlock>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
